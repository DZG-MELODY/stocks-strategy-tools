{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "naive-ui/volar"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./"
    // "paths": {
    //   "@client": [
    //     "src/*"
    //   ],
    //   "@electron": [
    //     "electron/*"
    //   ]
    // }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "dist-electron"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}